<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hc_nurse_action" model="ir.actions.act_window">
            <field name="name">Nurse</field>
            <field name="res_model">hc.nurse</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- hc_nurse tree view -->
        <record id="hc_nurse_view_tree" model="ir.ui.view">
            <field name="name">Nurses List</field>
            <field name="model">hc.nurse</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>

        <!-- hc.nurse form view -->
        <record id="hc_nurse_view_form" model="ir.ui.view">
            <field name="name">Nurse Form</field>
            <field name="model">hc.nurse</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="category_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>