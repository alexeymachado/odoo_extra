<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="hc_nurse_action" model="ir.actions.act_window">
                <field name="name">Nurse</field>
                <field name="res_model">hr.employee</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[('is_nurse','=',True)]</field>
                <field name="context">{'default_is_nurse': True}</field>
    </record>
    
   
    <record id="hr_nurse_view_form" model="ir.ui.view">
        <field name="name">Nurse Form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <!-- <field name="mode">primary</field> -->
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="Nurse" invisible='not is_nurse'>
                    <group>
                        <field name="is_nurse" invisible="False"></field>
                        <field name="category_id"></field>
                        <field name="certification_ids"></field>
                    </group>

                </page>
            </xpath>
        </field>
    </record>

</odoo>