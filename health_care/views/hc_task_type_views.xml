<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hc_task_type_action" model="ir.actions.act_window">
            <field name="name">task Type</field>
            <field name="res_model">hc.task.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- hc.task.type tree view -->
        <record id="hc_task_type_view_tree" model="ir.ui.view">
            <field name="name">hc_task_type_view_tree</field>
            <field name="model">hc.task.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- hc.task.type form view -->
        <record id="hc_task_type_view_form" model="ir.ui.view">
            <field name="name">hc_task_type_view_form</field>
            <field name="model">hc.task.type</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>


</odoo>