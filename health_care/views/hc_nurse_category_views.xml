<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hc_nurse_category_action" model="ir.actions.act_window">
            <field name="name">Nurse Category</field>
            <field name="res_model">hc.nurse.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- hc_nurse tree view -->
        <record id="hc_nurse_category_view_tree" model="ir.ui.view">
            <field name="name">Nurse Categories List</field>
            <field name="model">hc.nurse.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="observation"/>
                </tree>
            </field>
        </record>

        <!-- hc.nurse.category form view -->
        <record id="hc_nurse_category_view_form" model="ir.ui.view">
            <field name="name">Nurse Category Form</field>
            <field name="model">hc.nurse.category</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="observation"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>