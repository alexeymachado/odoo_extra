<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="hc_medicine_family_action" model="ir.actions.act_window">
            <field name="name">Medicine Family</field>
            <field name="res_model">hc.medicine.family</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

    <!-- hc_medicine_family tree view -->
    <record id="hc_medicine_family_view_tree" model="ir.ui.view">
        <field name="name">hc_medicine_family_view_tree</field>
        <field name="model">hc.medicine.family</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- hc_medicine_family form view -->
    <record id="hc_medicine_family_view_form" model="ir.ui.view">
        <field name="name">Medicine Family</field>
        <field name="model">hc.medicine.family</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>