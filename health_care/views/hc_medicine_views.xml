<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="hc_medicine_action" model="ir.actions.act_window">
            <field name="name">Medicine</field>
            <field name="res_model">hc.medicine</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

    <!-- hc_medicine tree view -->
    <record id="hc_medicine_view_tree" model="ir.ui.view">
        <field name="name">hc_medicine.view.tree</field>
        <field name="model">hc.medicine</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="family_id"/>
            </tree>
        </field>
    </record>

    <!-- hc_visit form view -->
    <record id="hc_medicine_view_form" model="ir.ui.view">
        <field name="name">hc_medicine.view.form</field>
        <field name="model">hc.medicine</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="family_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>