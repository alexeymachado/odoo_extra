<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- hc.limitation action window -->
        <record id="hc_limitation_action" model="ir.actions.act_window">
            <field name="name">Limitations</field>
            <field name="res_model">hc.limitation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- hc_limitation tree view -->
        <record id="hc_limitation_view_tree" model="ir.ui.view">
            <field name="name">hc_limitation_view_tree</field>
            <field name="model">hc.limitation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- hc_limitation form view -->
        <record id="hc_limitation_view_form" model="ir.ui.view">
            <field name="name">hc_limitation_view_form</field>
            <field name="model">hc.limitation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name='name'/>
                            <field name='description'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>