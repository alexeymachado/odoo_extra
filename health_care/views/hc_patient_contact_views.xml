<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="action_hc_patient_contact" model="ir.actions.act_window">
            <field name="name">Patient Contact</field>
            <field name="res_model">hc.patient.contact</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

    <!-- tree -->
    <record id="hc_patient_contact_view_tree" model="ir.ui.view">
        <field name="name">hc.patient.contact.view.tree</field>
        <field name="model">hc.patient.contact</field>
        <field name="arch" type="xml">
            <tree>
                <field name="contact_id" string="name"/>
                <!-- <field name="name"/> -->
                <field name="contact_relation_id" string="relation"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="city"/>
                <field name="state"/>
                <field name="zip_code"/>
            </tree>
        </field>
    </record>

    <!-- form -->
    <record id="hc_patient_contact_view_form" model="ir.ui.view">
        <field name="name">hc.patient.contact.view.form</field>
        <field name="model">hc.patient.contact</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group string="Generals">
                        <field name="contact_id" string="name"/>
                        <!-- <field name="name"/> -->
                        <field name= 'contact_relation_id' options="{'limit':2, 'no_create':True, 'no_quick_create':True, 'no_open':True, 'no_create_edit':True}"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="city"/>
                        <field name="state"/>
                        <field name="zip_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



</odoo>