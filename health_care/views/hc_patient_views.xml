<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hc_patient_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hc.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- hc.patient tree view -->
    <record id="hc_patient_view_tree" model="ir.ui.view">
        <field name="name">hc.patient.view.tree</field>
        <field name="model">hc.patient</field>
        <field name="arch" type="xml">
            <tree>
                <button name="" string="Import" class="oe_highlight"/>
                <field name="name"/>
                <field name="mrn"/>
                <field name="hic"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_day"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <!-- hc.patient form view -->
    <record id="hc_patient_view_form" model="ir.ui.view">
        <field name="name">hc.patient.view.form</field>
        <field name="model">hc.patient</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group string="Generales">
                            <field name="contact_id" string="name"/>"
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="sex"/>
                            <field name="birth_day"/>
                            <field name="age"/>
                        </group>

                        <group string="Contact Info">  
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="state"/>
                            <field name="zip_code"/>
                        </group>

                        <group string="Patient">
                            <field name="mrn"/>
                            <field name="hic"/>
                            <field name="resident_type"/>
                        </group>

                    </group>   
                </sheet>
            </form>
        </field>
    </record>
</odoo>