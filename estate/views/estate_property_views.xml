<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_estate_property" model="ir.actions.act_window">
            <field name="name">Propiedad</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="name" string="Title"/>
                <field name="estado"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="offer_ids"/>
                <field name="tag_ids"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="total_area"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <field name="name"/>
                    <field name="estado"/>
                    <field name="tag_ids" widget="many2many_tags"/>  
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight"/>
                    <button name="action_sold" type="object" string="Sold"/>
                </header>

                <sheet>
                    <group>

                        <group>
                            <field name="type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="type_id" />
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>    
                            </page>
                            <page string="Ofertas">
                                <group>
                                    <field name="offer_ids"/>
                                </group>    
                            </page>
                            <page string="Otros">
                                <group>
                                    <field name="comprador_id"/>
                                    <field name="vendedor_id"/>
                                </group>    
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Propiedad">
                <field name="name"/>
                <field name="description"/>
                <field name="bedrooms"/>
                
                <filter name="filtro1" string="mi filtro 1" domain="[('name', 'like', 'prop')]"/>
                <filter name="Agrupacion1" string="mi agrupacion 1" context="{'group_by': 'bedrooms'}"/>
            </search>
        </field>
    </record>
        

</odoo>